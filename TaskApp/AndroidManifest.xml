<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.br.italogas.taskapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-configuration android:reqHardKeyboard="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.br.italogas.taskapp.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.br.italogas.taskapp.app.AdicionarTarefaActivity"
            android:label="@string/title_activity_adicionar_tarefa" >
        </activity>
        <activity
            android:name="com.br.italogas.taskapp.app.VisualizarTarefasActivity"
            android:label="@string/title_activity_visualizar_tarefas" >
        </activity>
        <activity
            android:name="com.br.italogas.taskapp.app.ExibirTarefaActivity"
            android:label="@string/title_activity_exibir_tarefa" >
        </activity>
    </application>

</manifest>
